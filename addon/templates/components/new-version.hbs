{{#new-version-notifier
	updateInterval=3600000
	versionFileName='/VERSION.txt'
as |version lastVersion reload|}}
	{{#if hasBlock}}
		{{yield (hash
					reload=reload
					version=version
					lastVersion=lastVersion
				)}}
	{{else}}
		{{#paper-button
			raised=true
			class='flex layout-row layout-fill layout-align-center-center md-warn no-margin new-version-notifier'
			onClick=(action reload)
		}}
			{{paper-icon 'refresh' spin=true}}
			Click to update from {{lastVersion}} to {{version}} of the Intranet
		{{/paper-button}}
	{{/if}}
{{/new-version-notifier}}